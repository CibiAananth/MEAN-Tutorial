{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules"],
        "paths": ["app/"]
      }
    }
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": 0,
    "max-len": 0,
    "no-underscore-dangle": 1
  }
}
